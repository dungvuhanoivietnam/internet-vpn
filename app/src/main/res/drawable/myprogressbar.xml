<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_10sdp" />
            <gradient
                android:startColor="#1D1D1D"
                android:centerColor="#1D1D1D"
                android:centerY="1.0"
                android:endColor="#1D1D1D"
                android:angle="180"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/_10sdp" />
                <gradient
                    android:startColor="#1D1D1D"
                    android:centerColor="#1D1D1D"
                    android:centerY="1.0"
                    android:endColor="#1D1D1D"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>