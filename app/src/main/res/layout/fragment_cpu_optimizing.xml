<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_cpu"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/ic_cpu_core"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_progress"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/ic_progress"
            app:layout_constraintBottom_toBottomOf="@id/ic_cpu"
            app:layout_constraintEnd_toEndOf="@id/ic_cpu"
            app:layout_constraintStart_toStartOf="@id/ic_cpu"
            app:layout_constraintTop_toTopOf="@id/ic_cpu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_percent_optimizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/interbold700"
        android:textColor="@color/white"
        android:textSize="@dimen/_30ssp"
        tools:text="60%" />

    <TextView
        android:id="@+id/tv_optimizing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular400"
        android:gravity="start"
        android:text="@string/optimizing"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp" />
</androidx.appcompat.widget.LinearLayoutCompat>