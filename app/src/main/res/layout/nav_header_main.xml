<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_menu"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp"
        android:src="@drawable/ic_banner_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.wise_memory_optimizer.custom.ExtTextView
            android:id="@+id/txt_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/speed_test"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />

        <com.example.wise_memory_optimizer.custom.ExtTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boost_internet"
            android:textColor="@color/color_violet"
            android:textSize="@dimen/_17sdp" />

    </LinearLayout>

    <com.example.wise_memory_optimizer.custom.MenuCustomer
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_content_top"
        app:title="@string/menu_home" />

    <com.example.wise_memory_optimizer.custom.MenuCustomer
        android:id="@+id/auto_optimize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/home"
        app:title="Auto Optimize" />

    <com.example.wise_memory_optimizer.custom.MenuCustomer
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/auto_optimize"
        app:title="@string/menu_notification" />

    <com.example.wise_memory_optimizer.custom.MenuCustomer
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/notification"
        app:title="@string/title_language" />

    <com.example.wise_memory_optimizer.custom.MenuCustomer
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/language"
        app:title="@string/title_privacy" />

    <com.example.wise_memory_optimizer.custom.MenuCustomer
        android:id="@+id/about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/privacy"
        app:title="@string/about_app" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/bg_text_menu"
            android:drawableStart="@drawable/ic_layer_1"
            android:drawablePadding="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_40sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/premium"
            android:textColor="@color/color_yellowff" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/name_author"
        android:textColor="#9E9E9E"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</LinearLayout>

