<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_large"
    android:layout_height="@dimen/width_150"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/padding_small">

    <com.example.wise_memory_optimizer.custom.roundimage.RoundedImageView
        android:id="@+id/ivSameVideo"
        android:layout_width="@dimen/size_large"
        android:layout_height="@dimen/width_150"
        android:scaleType="centerCrop"
        android:src="@drawable/iv_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@color/transparent"
        app:riv_border_width="3dp"
        app:riv_corner_radius="5dp"
        app:riv_oval="false" />

    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/custom_checkbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/padding_midlde_tiny_small"
        android:padding="@dimen/padding_tiny_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="@dimen/padding_normal"
            android:layout_height="@dimen/padding_normal"
            android:src="@drawable/ic_play2" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_middle_tiny"
            android:textColor="@color/white"
            tools:text="2:25" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>