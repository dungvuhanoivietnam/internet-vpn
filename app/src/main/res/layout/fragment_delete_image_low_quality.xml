<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iv_background">

    <include
        android:id="@+id/llToolbar"
        layout="@layout/custom_toolbar"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/llAllLowQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_normal"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llToolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card1"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_60"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="0.5dp">

                    <com.example.wise_memory_optimizer.custom.roundimage.RoundedImageView
                        android:id="@+id/rvImage1"
                        android:layout_width="@dimen/padding_xlarge_x"
                        android:layout_height="@dimen/size_image_normal"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/iv_1"
                        app:riv_border_color="@color/transparent"
                        app:riv_border_width="3dp"
                        app:riv_corner_radius="3dp"
                        app:riv_oval="false" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card2"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_60"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/padding_xlarge"
                    android:theme="@style/Theme.MaterialComponents.DayNight"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="0.5dp">

                    <com.example.wise_memory_optimizer.custom.roundimage.RoundedImageView
                        android:id="@+id/rvImage2"
                        android:layout_width="@dimen/padding_xlarge_x"
                        android:layout_height="@dimen/size_image_normal"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/iv_2"
                        app:riv_border_color="@color/transparent"
                        app:riv_border_width="3dp"
                        app:riv_corner_radius="3dp"
                        app:riv_oval="false" />
                </com.google.android.material.card.MaterialCardView>


                <RelativeLayout
                    android:layout_width="@dimen/size_130"
                    android:layout_height="@dimen/size_110">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardImage3"
                        android:layout_width="@dimen/size_75"
                        android:layout_height="@dimen/size_90"
                        android:layout_gravity="center|top"
                        android:layout_marginStart="@dimen/padding_xlarge"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="6dp"
                        android:theme="@style/Theme.MaterialComponents.DayNight"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="0.5dp">

                        <com.example.wise_memory_optimizer.custom.roundimage.RoundedImageView
                            android:id="@+id/rvImage3"
                            android:layout_width="@dimen/size_60"
                            android:layout_height="@dimen/size_75"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="2dp"
                            android:padding="-10dp"
                            android:src="@drawable/iv_4"
                            app:riv_border_color="@color/transparent"
                            app:riv_border_width="3dp"
                            app:riv_corner_radius="3dp"
                            app:riv_oval="false" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardImage4"
                        android:layout_width="@dimen/size_45"
                        android:layout_height="@dimen/size_60"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/padding_small"
                        android:theme="@style/Theme.MaterialComponents.DayNight"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="0.5dp">

                        <com.example.wise_memory_optimizer.custom.roundimage.RoundedImageView
                            android:id="@+id/rvImage4"
                            android:layout_width="@dimen/size_45"
                            android:layout_height="@dimen/size_image_normal"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="1dp"
                            android:src="@drawable/iv_3"
                            app:riv_border_color="@color/transparent"
                            app:riv_border_width="3dp"
                            app:riv_corner_radius="3dp"
                            app:riv_oval="false" />
                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_union"
                android:gravity="center"
                android:paddingHorizontal="@dimen/padding_middle_tiny">

                <TextView
                    android:id="@+id/tvTotalLowQualityPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular400"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_setting_tiny" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLowQualityPhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_normal"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAllLowQuality"
        tools:listitem="@layout/item_delete_same_photo" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular400"
        android:text="@string/txt_no_data"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>